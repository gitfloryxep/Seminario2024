@model IEnumerable<ManualidadesEunice.Models.Producto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-5">
    <div action="col-12">

        <div class="card border">
            @* CARD HEADER *@
            <div class="card-header bg-light">
                <div class="row">
                    <div class="col">
                        <h3>
                            <strong>Listado de productos</strong>
                        </h3>
                    </div>
                    <div class="col">
                        <h3 class="text-white text-end">
                            <a asp-action="Create" asp-controller="Productos" class="btn btn-success">
                                <i class="bi bi-file-plus-fill"></i> Nuevo
                            </a>
                        </h3>
                    </div>
                </div>
            </div>
            @* CARD HEADER *@
            <div class="card-body table-responsive">
                <table id="Paginador" class="table table-borderless table-striped table-light" style="width:100%">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Código Producto</th>
                            <th>Nombre</th>
                            <th>Costo</th>
                            <th>Cantida</th>
                            <th>Precio público</th>
                            <th>Precio docena</th>
                            <th>Precio Mayorista</th>
                            <th>Stock</th>
                            <th>Categoría</th>
                            <th>Marca</th>
                            <th>Presentación</th>
                            <th>Proveedor</th>
                            <th>Tipo</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CodigoProducto</td>
                                <td>@item.Codigo</td>
                                <td>@item.Nombre</td>
                                <td>@item.Costo</td>
                                <td>@item.Cantidad</td>
                                <td>@item.PrecioUnidad</td>
                                <td>@item.PrecioDocena</td>
                                <td>@item.PrecioMayorista</td>
                                <td>@item.Stock</td>
                                <td>@item.CodigoCategoriaNavigation.Nombrecategoria</td>
                                <td>@item.CodigoMarcaNavigation.NombreMarca</td>
                                <td>@item.CodigoPresentacionNavigation.NombrePresentacion</td>
                                <td>@item.CodigoProveedorNavigation.NombreProveedor</td>
                                <td>@item.CodigoTipoProductoNavigation.NombreTipoProducto</td>
                               
                                @if (item.Estado == 1)
                                {
                                    <td role="button"><span class="text-success"> Activo</span></td>
                                }
                                else if (item.Estado == 2)
                                {
                                    <td role="button"><span class="text-danger"> Inactivo</span></td>
                                }
                                <td>
                                    <a class="btn btn-outline-primary btn-sm " asp-action="Edit" asp-controller="Productos" asp-route-id="@item.CodigoProducto"><i class="bi bi-pencil-square"></i></a>
                                    <a class="btn btn-outline-info btn-sm " asp-action="Details" asp-controller="Productos" asp-route-id="@item.CodigoProducto"><i class="bi bi-list-check"></i></a>
                                    <a class="btn btn-outline-danger btn-sm " asp-action="Delete" asp-controller="Productos" asp-route-id="@item.CodigoProducto"><i class="bi bi-trash-fill"></i></a>
                                </td>
                            </tr>



                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            formatoTablaResponsive();
        });
    </script>

}