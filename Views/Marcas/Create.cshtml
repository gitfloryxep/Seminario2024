@model ManualidadesEunice.Models.Marca

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body>
    <div class="row mt-5">

        <div class="row justify-content-center">
            <div class="col-12 col-xl-10 col-md-3">

                <div class="card">
                    <div class="card-header">
                        <h3>
                            <strong>Crear Marca</strong>
                        </h3>
                    </div>
                    <div class="card-body">

                        <form asp-controller="Marcas"  asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row visually-hidden">
                                <div class="hidden">
                                    <label asp-for="CodigoMarca"></label>
                                    <input class="form-control" type="text" asp-for="CodigoMarca" readonly />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 col-md-12 col-xl-5 mb-3">
                                    <label asp-for="NombreMarca" class="control-label"></label>
                                    <input asp-for="NombreMarca" class="form-control" placeholder="Nombre de la Marca"/>
                                    <span asp-validation-for="NombreMarca" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-12 col-xl-6 mb-3">
                                    <label asp-for="Estado"></label>
                                    <select class="form-control mb-3" type="text" placeholder="Estado" required asp-for="Estado">
                                        <option value="1">Activo</option>
                                        <option value="2">Inactivo</option>
                                    </select>
                                    <span asp-validation-for="Estado" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="card-footer">
                                <div class="row pt-1">
                                    <div class="col-6 col-md-6 mb-1 text-start">
                                        <a asp-controller="Marcas" asp-action="Index" class="btn btn-outline-primary">Regresar</a>
                                    </div>
                                    <div class="col-6 col-md-6 mb-1 text-end">
                                        <input type="submit" value="Crear" class="btn btn-success" />
                                    </div>
                                </div>
                            </div>

                        </form>

                    </div>

                </div>

            </div>
        </div>

    </div>

</body>
</html>
