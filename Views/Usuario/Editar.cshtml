@model ManualidadesEunice.Models.Usuario
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>


    <div class="row mt-3">

        <div class="row justify-content-center">
            <div class="col-12 col-xl-10 col-md-3">

                <div class="card">
                    <div class="card-header">
                        <h3>
                            <strong>Editar usuario</strong>
                        </h3>
                    </div>
                    <div class="card-body">

                        <form asp-controller="Usuario" asp-action="Editar" method="post">


                            <div class="row">
                                <div class="col-12 col-md-12 col-xl-2 mb-3">
                                    <label asp-for="CodigoUsuario"></label>
                                    <input class="form-control" type="text" asp-for="CodigoUsuario" readonly />
                                </div>
                                <div class="col-12 col-md-12 col-xl-5 mb-3">
                                    <label asp-for="NombreApellido"></label>
                                    <input class="form-control mb-3" type="text" placeholder="Nombre completo" asp-for="NombreApellido" />
                                    <span asp-validation-for="NombreApellido" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-12 col-xl-5 mb-3">
                                    <label asp-for="Rol"></label>
                                    <select class="form-control mb-3" type="text" placeholder="Rol" required asp-for="Rol">
                                        <option value="1">Empleado</option>
                                        <option value="2">Administrador</option>
                                    </select>
                                    <span asp-validation-for="Rol" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 col-md-12 col-xl-3 mb-3">
                                    <label asp-for="FechaNacimiento"></label>
                                    <input class="form-control mb-3" type="date" placeholder="Fecha de nacimiento" required asp-for="FechaNacimiento" />
                                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-12 col-xl-4 mb-3">
                                    <label asp-for="Telefono"></label>
                                    <input class="form-control mb-3" type="number" placeholder="Teléfono" asp-for="Telefono"/>
                                    <span asp-validation-for="Telefono" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-12 col-xl-5 mb-3">
                                    <label asp-for="Email"></label>
                                    <input class="form-control mb-3" type="email" placeholder="Correo" required asp-for="Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 col-md-12 col-xl-6 mb-3">
                                    <label asp-for="Contrasena"></label>
                                    <input class="form-control mb-3" type="password" placeholder="Contraseña" asp-for="Contrasena" />
                                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-12 col-xl-6 mb-3">
                                    <label asp-for="Estado"></label>
                                    <select class="form-control mb-3" type="text" placeholder="Estado" required asp-for="Estado">
                                        <option value="1">Activo</option>
                                        <option value="2">Inactivo</option>
                                    </select>
                                    <span asp-validation-for="Estado" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="card-footer">
                                <div class="row pt-1">
                                    <div class="col-6 col-md-6 mb-1 text-start">
                                        <a asp-controller="Usuario" asp-action="Index" class="btn btn-outline-primary">Regresar</a>
                                    </div>
                                    <div class="col-6 col-md-6 mb-1 text-end">
                                        <button class="btn btn-success" type="submit">Actualizar</button>
                                    </div>
                                </div>
                            </div>

                        </form>

                    </div>

                </div>

            </div>
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

