@model ManualidadesEunice.Models.Proveedor

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-xl-11 col-md-11">
            <h2> Detalles de categoria</h2>
            <hr />
            <h5> Registro con estado  <span class="text-success"> " 1 "</span>  es ACTIVO estado <span class="text-danger"> " 2 "</span>es INACTIVO </h5>


            <dl class="row">
                <dd class="col-sm-9">
                    NOMBRE: @Html.DisplayFor(model => model.NombreProveedor)
                </dd>
                <dd class="col-sm-10">
                    CATEGORÍA: @Html.DisplayFor(model => model.CodigoCategoriaN.Nombrecategoria)
                </dd>
                <dd class="col-sm-10">
                   TELÉFONO: @Html.DisplayFor(model => model.Telefono)
                </dd>
                <dd class="col-sm-9">
                    DIRECCIÓN: @Html.DisplayFor(model => model.Direccion)
                </dd>
                <dd class="col-sm-10">
                    BANCO: @Html.DisplayFor(model => model.NombreBanco)
                </dd>
                <dd class="col-sm-10">
                   No. CUENTA: @Html.DisplayFor(model => model.NumeroCuenta)
                </dd>
                <dd class="col-sm-9">
                    ESTADO: @Html.DisplayFor(model => model.Estado)
                </dd>
                <dd class="col-sm-9">
                    FECHA: @Html.DisplayFor(model => model.FechaRegistro)
                </dd>
            </dl>
            <hr />
        </div>


    </div>

    <div class="col-12 col-md-11 mb-1 text-end">
        <a asp-controller="Proveedores" asp-action="Index" class="btn btn-outline-primary">Regresar</a>
    </div>
</div>

