@model ManualidadesEunice.Models.Cliente

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row mt-5">

    <div class="row justify-content-center">
        <div class="col-12 col-xl-10 col-md-3">

            <div class="card">
                <div class="card-header">
                    <h3>
                        <strong>Editar Cliente</strong>
                    </h3>
                </div>
                <div class="card-body">

                    <form asp-controller="Clientes" asp-action="Edit" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="">
                                <div class="col-12 col-md-12 col-xl-3 mb-3">
                                    <label asp-for="CodigoCliente"></label>
                                    <input class="form-control" type="text" asp-for="CodigoCliente" readonly />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 col-md-12 col-xl-6 mb-3">
                                <label asp-for="NombreCliente" class="control-label"></label>
                                <input asp-for="NombreCliente" class="form-control" placeholder="Nombre del cliente" />
                                <span asp-validation-for="NombreCliente" class="text-danger"></span>
                            </div>
                            <div class="col-12 col-md-12 col-xl-6 mb-3">
                                <label asp-for="Telefono" class="control-label"></label>
                                <input type="number" asp-for="Telefono" class="form-control" placeholder="Número telefónico" />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-12 col-md-12 col-xl-6 mb-3">
                                <label asp-for="Direccion" class="control-label"></label>
                                <input asp-for="Direccion" class="form-control" placeholder="Dirección" />
                                <span asp-validation-for="Direccion" class="text-danger"></span>
                            </div>
                            <div class="col-12 col-md-12 col-xl-6 mb-3">
                                <label asp-for="Estado"></label>
                                <select class="form-control mb-3" type="text" placeholder="Estado" required asp-for="Estado">
                                    <option value="1">Activo</option>
                                    <option value="2">Inactivo</option>
                                </select>
                                <span asp-validation-for="Estado" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="row pt-1">
                                <div class="col-6 col-md-6 mb-1 text-start">
                                    <a asp-controller="Clientes" asp-action="Index" class="btn btn-outline-primary">Regresar</a>
                                </div>
                                <div class="col-6 col-md-6 mb-1 text-end">
                                    <button class="btn btn-success" type="submit">Actualizar</button>
                                </div>
                            </div>
                        </div>

                    </form>

                </div>

            </div>

        </div>
    </div>

</div>