@model ManualidadesEunice.Models.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    

    <div class="container mt-5 pt-5">

        <div class="row justify-content-center">
            <div class="col-12 col-xl-4 col-md-6">

                <div class="card">
                    <div class="card-header">
                        Registrarse
                    </div>
                    <div class="card-body">

                        <form asp-controller="Inicio" asp-action="Registrarse" method="post">

                            <input class="form-control mb-3" type="text" placeholder="Nombre completo" asp-for="NombreApellido" required />
                            <select class="form-control mb-3" type="text" placeholder="Rol" required asp-for="Rol">
                                <option value="1">Activo</option>
                                <option value="2">Inactivo</option>
                            </select>
                            <span asp-validation-for="Rol" class="text-danger"></span>
                            <input class="form-control mb-3" type="date" placeholder="Fecha de nacimiento" required asp-for="FechaNacimiento" />
                            <input class="form-control mb-3" type="number" placeholder="Teléfono" asp-for="Telefono" required />
                            <input class="form-control mb-3" type="email" placeholder="Correo" required asp-for="Email" />
                            <input class="form-control mb-3" type="password" placeholder="Contraseña" asp-for="Contrasena" required />
                            <select class="form-control mb-3" type="text" placeholder="Estado" required asp-for="Estado">
                                <option value="1">Empleado</option>
                                <option value="2">Administrador</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Registrate</button>
                            </div>
                            @if (ViewData["Mensaje"] != null)
                            {

                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                </div>
                            }
                            ¿Ya tienes una cuenta? <a href="@Url.Action("IniciarSesion","Inicio")"> Iniciar Sesion</a>

                        </form>

                    </div>

                </div>

            </div>
        </div>

    </div>      

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>